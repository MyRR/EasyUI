
@{
    ViewBag.Title = "ProductTest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
<script src="/Content/js/viewModel/com.viewModel.searchEdit.js"></script>
<script type="text/javascript">
    using(['numberbox','datebox']);
    var data = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
    ko.bindingViewModel(new com.viewModel.searchEdit(data));
</script>
}
<div class="z-toolbar">
    <a href="#" plain="true" class="easyui-linkbutton"  icon="icon-arrow_refresh"   title="刷新" data-bind="click:refreshClick">刷新</a>
    <a href="#" plain="true" class="easyui-linkbutton"  icon="icon-add"             title="新增" data-bind="click:addClick"    >新增</a>
    <a href="#" plain="true" class="easyui-linkbutton"  icon="icon-edit"            title="编辑" data-bind="click:editClick"   >编辑</a>
    <a href="#" plain="true" class="easyui-linkbutton"  icon="icon-cross"           title="删除" data-bind="click:deleteClick" >删除</a>
    <a href="#" plain="true" class="easyui-linkbutton"  icon="icon-save"            title="保存" data-bind="click:saveClick"   >保存</a>
    <a href="#" plain="true" class="easyui-splitbutton" data-options="menu:'#dropdown',iconCls:'icon-download'"                >导出</a>
</div>

<div id="dropdown" style="width:100px; display:none;">  
    <div data-options="iconCls:'icon-ext-xls'"      suffix="xls"    data-bind="click:downloadClick">Excel2003   </div>  
    <div data-options="iconCls:'icon-page_excel'"   suffix="xlsx"   data-bind="click:downloadClick">Excel2007   </div>  
    <div data-options="iconCls:'icon-ext-doc'"      suffix="doc"    data-bind="click:downloadClick">Word2003    </div>  
</div> 

<div class="container_12" style="position:relative;">
    <div class="grid_1 lbl">产品名</div>
    <div class="grid_2 val"><input type="text" data-bind="value:form.ProductName" class="z-txt " /></div>
    <div class="grid_1 lbl">编码</div>
    <div class="grid_2 val"><input type="text" data-bind="value:form.ProductCode" class="z-txt " /></div>
    <div class="grid_1 lbl">颜色</div>
    <div class="grid_2 val"><input type="text" data-bind="value:form.ProductColor" class="z-txt " /></div>
    
    <div class="clear"></div>
    
    <div class="grid_1 lbl">类别</div>
    <div class="grid_2 val"><input type="text" data-bind="comboboxValue:form.ProductType" class="z-txt easyui-combobox" /></div>
    <div class="grid_1 lbl">生产时间</div>
    <div class="grid_2 val"><input type="text" data-bind="value:form.ProductDate" class="z-txt easyui-daterange" /></div>

    <div class="clear"></div>

    <div class="prefix_9" style="position:absolute;top:5px;height:0;">  
        <a id="a_search" href="#" class="buttonHuge button-blue" data-bind="click:searchClick" style="margin:0 15px;">查询</a> 
        <a id="a_reset"  href="#" class="buttonHuge button-blue" data-bind="click:clearClick">清空</a>
    </div>
</div>

<table data-bind="datagrid:grid" style="display:none">
    <thead>  
        <tr>  
            <th field="ID"	 	sortable="true"	align="left"	width="" editor="text" >ID</th>
            <th field="ProductName"		sortable="true"	align="left"	width="80" editor="text" >ProductName</th>
            <th field="ProductCode"		sortable="true"	align="left"	width="80" editor="text" >ProductCode</th>
            <th field="ProductColor"		sortable="true"	align="left"	width="80" editor="text" >ProductColor</th>
            <th field="ProductType"		sortable="true"	align="left"	width="80" editor="{type:'combobox',options:{}}" >ProductType</th>
            <th field="ProductDate"		sortable="true"	align="left"	width="80" editor="datebox" formatter="com.formatDate">ProductDate</th>
            <th field="Qty"		sortable="true"	align="left"	width="80" editor="{type: 'numberbox',options:{min: 0}}" >Qty</th>
            <th field="Money"		sortable="true"	align="left"	width="80" editor="{type: 'numberbox',options:{min: 0, precision: 2}}" formatter="com.formatMoney">Money</th>
        </tr>                            
    </thead>      
</table> 
